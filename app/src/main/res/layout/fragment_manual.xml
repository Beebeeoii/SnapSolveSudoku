<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Manual">

    <com.beebeeoii.snapsolvesudoku.SudokuBoard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sudoku_board"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/manual_constraint"
        app:layout_constraintTop_toBottomOf="@id/sudoku_board"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/board_preview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30dp"
                android:visibility="gone"/>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/input_button"
                    android:text="1"
                    android:textSize="20sp"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:id="@+id/b0"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/input_button"
                    android:text="2"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_row="0"
                    android:id="@+id/b1"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/input_button"
                    android:text="3"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_row="0"
                    android:id="@+id/b2"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_button"
                    android:text="6"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_row="1"
                    android:id="@+id/b5"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_button"
                    android:text="7"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="2"
                    android:id="@+id/b6"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_button"
                    android:text="8"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_row="2"
                    android:id="@+id/b7"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_button"
                    android:text="4"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="1"
                    android:id="@+id/b3"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_button"
                    android:text="9"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_row="2"
                    android:id="@+id/b8"/>

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_button"
                    android:text="5"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_row="1"
                    android:id="@+id/b4"/>

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/manual_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manual_constraint"
        app:layout_constraintVertical_bias="0.4">

        <Button
            android:id="@+id/clear_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/clear_background"
            android:textSize="18sp"
            android:fontFamily="@font/segoe_ui"
            android:textStyle="bold"
            android:text="Clear" />

        <Button
            android:id="@+id/solve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/solve_background"
            android:textSize="18sp"
            android:fontFamily="@font/segoe_ui"
            android:textStyle="bold"
            android:text="Solve" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manual_multi_sols"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sudoku_board"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.4"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="invisible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous_sol"
            android:background="@drawable/next_icon"
            android:rotation="180"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/solution_counter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:textSize="30sp"
            android:text="1 / 1"
            android:visibility="visible"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_sol"
            android:background="@drawable/next_icon"
            android:gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_board_option"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manual_multi_sols"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save board to history for future references?"
            android:textSize="18sp"
            android:fontFamily="@font/segoe_ui_bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forget_board_button"
                android:text="Forget"
                android:background="@drawable/clear_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_board_button"
                android:text="Save"
                android:background="@drawable/solve_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/edit_board_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Board"
        android:textSize="18sp"
        android:fontFamily="@font/segoe_ui"
        android:textStyle="bold"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/edit_board_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sudoku_board"
        app:layout_constraintVertical_bias="0.15"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>